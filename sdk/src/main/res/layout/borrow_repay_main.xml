<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@color/card_border"
        android:orientation="vertical"
        android:outlineAmbientShadowColor="@color/card_border"
        android:outlineSpotShadowColor="@color/card_border"
        card_view:cardBackgroundColor="@color/card_border"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
           <!-- <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/wallet_bg"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:id="@+id/pesa_logo"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content">
                    <finance.pesa.sdk.utils.PoppinsMediumTextView
                        android:id="@+id/brand_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ether"
                        android:layout_gravity="center"
                        android:textColor="@color/black_white"
                        android:textSize="@dimen/large_text" />

                    <ImageView
                        android:id="@+id/brand_logo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:padding="20dp"
                        android:background="@drawable/ic_p_eth"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_link"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:paddingTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingRight="10dp"
                        android:layout_weight="1">
                        <LinearLayout
                            android:id="@+id/borrow_tab"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:orientation="vertical">
                            <finance.pesa.sdk.utils.RoboticMediumTextview
                                android:id="@+id/borrow_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/borrow"
                                android:textColor="@color/tab_select_text"
                                android:textSize="@dimen/medium_text" />
                            <View
                                android:id="@+id/borrow_div"
                                android:layout_width="30dp"
                                android:layout_height="2dp"
                                android:layout_marginTop="5dp"
                                android:layout_gravity="center"
                                android:background="@color/app_green"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:layout_weight="1">
                        <LinearLayout
                            android:id="@+id/repay_tab"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <finance.pesa.sdk.utils.RoboticMediumTextview
                                android:id="@+id/repay_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/repay"
                                android:textColor="@color/tab_unselect_text"
                                android:textSize="@dimen/medium_text" />
                            <View
                                android:id="@+id/repay_div"
                                android:layout_width="30dp"
                                android:layout_height="2dp"
                                android:layout_marginTop="5dp"
                                android:visibility="gone"
                                android:layout_gravity="center"
                                android:background="@color/app_green"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <finance.pesa.sdk.utils.WrapContentHeightViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">
                </finance.pesa.sdk.utils.WrapContentHeightViewPager>

            </LinearLayout>
            <!--</androidx.core.widget.NestedScrollView>-->
            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="20dp"
                android:padding="5dp"
                android:src="@drawable/ic_close_popup" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>