<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:weightSum="4.5">


            <ImageView
                android:id="@+id/currency_logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_send_bg"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_ethereum"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/end_lay"
            android:layout_toRightOf="@+id/currency_logo"
            android:orientation="vertical">
            <finance.pesa.sdk.utils.RoboticTextview
                android:id="@+id/iv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="04 Dec, 2020"
                android:textColor="@color/txt_bg"
                android:textSize="@dimen/very_small_text" />
          <finance.pesa.sdk.utils.RoboticMediumTextview
                android:id="@+id/iv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Michelle James"
              android:paddingTop="2dp"
                android:textColor="@color/light_gray_white"
                android:textSize="@dimen/small_medium_text" />
            <finance.pesa.sdk.utils.RoboticMediumTextview
                android:id="@+id/iv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:gravity="left"
                android:text="Request sent "
                android:textColor="@color/app_green"
                android:textSize="@dimen/small_medium_text" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/end_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_alignParentEnd="true"
            android:orientation="vertical">
            <finance.pesa.sdk.utils.RoboticMediumTextview
                android:id="@+id/iv_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ 500.00 ETH"
                android:textColor="@color/app_green"
                android:textSize="@dimen/small_medium_text" />
            <finance.pesa.sdk.utils.RoboticTextview
                android:id="@+id/iv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approved"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:background="@drawable/status_green_bg"
                android:textColor="@color/app_green"
                android:textSize="@dimen/small_medium_text" />
        </LinearLayout>




    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:alpha="0.5"
        android:layout_marginLeft="60dp"
        android:background="@color/light_gray_white" />

</LinearLayout>