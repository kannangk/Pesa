<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_green"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <finance.pesa.sdk.utils.RoboticNormalButton
            android:id="@+id/dial_pad_1"
            style="@style/DialpadButton_white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:text="1"
            android:textAppearance="@style/DialpadButtonText" />

        <finance.pesa.sdk.utils.RoboticNormalButton
            android:id="@+id/dial_pad_2"
            style="@style/DialpadButton_white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="15dp"
            android:text="2"
            android:textAppearance="@style/DialpadButtonText" />

        <finance.pesa.sdk.utils.RoboticNormalButton
            android:id="@+id/dial_pad_3"
            style="@style/DialpadButton_white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="15dp"
            android:text="3"
            android:textAppearance="@style/DialpadButtonText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <finance.pesa.sdk.utils.RoboticNormalButton
            android:id="@+id/dial_pad_4"
            style="@style/DialpadButton_white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:text="4"
            android:textAppearance="@style/DialpadButtonText" />

        <finance.pesa.sdk.utils.RoboticNormalButton
            android:id="@+id/dial_pad_5"
            style="@style/DialpadButton_white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:text="5"
            android:textAppearance="@style/DialpadButtonText" />

        <finance.pesa.sdk.utils.RoboticNormalButton
            android:id="@+id/dial_pad_6"
            style="@style/DialpadButton_white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:text="6"
            android:textAppearance="@style/DialpadButtonText" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <finance.pesa.sdk.utils.RoboticNormalButton
            android:id="@+id/dial_pad_7"
            style="@style/DialpadButton_white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:text="7"
            android:textAppearance="@style/DialpadButtonText" />

        <finance.pesa.sdk.utils.RoboticNormalButton
            android:id="@+id/dial_pad_8"
            style="@style/DialpadButton_white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:text="8"
            android:textAppearance="@style/DialpadButtonText" />

        <finance.pesa.sdk.utils.RoboticNormalButton
            android:id="@+id/dial_pad_9"
            style="@style/DialpadButton_white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:text="9"
            android:textAppearance="@style/DialpadButtonText" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <finance.pesa.sdk.utils.RoboticNormalButton
            android:id="@+id/dial_pad_10"
            style="@style/DialpadButton_white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:text="."
            android:textAppearance="@style/DialpadButtonText" />

        <finance.pesa.sdk.utils.RoboticNormalButton
            android:id="@+id/dial_pad_0"
            style="@style/DialpadButton_white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:text="0"
            android:textAppearance="@style/DialpadButtonText" />


        <ImageButton
            android:id="@+id/backspace"
            style="?android:borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_back"
            android:tint="@color/white"
            android:layout_gravity="center_vertical"/>


    </LinearLayout>

</LinearLayout>