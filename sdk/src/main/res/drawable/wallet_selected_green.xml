<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners  android:bottomRightRadius="@dimen/alert_size"
                android:bottomLeftRadius="@dimen/alert_size"/>

            <solid android:color="@color/app_green" />
        </shape>
    </item>
    <item android:bottom="1dp"
        android:left="1dp"
        android:right="1dp">
        <shape android:shape="rectangle">
            <corners  android:bottomRightRadius="@dimen/alert_size"
                android:bottomLeftRadius="@dimen/alert_size"/>
            <padding android:left="3dp"
                android:top="0dp"
                android:right="3dp"
                android:bottom="0dp" />
            <solid android:color="@color/white_black"/>
        </shape>

    </item>
</layer-list>