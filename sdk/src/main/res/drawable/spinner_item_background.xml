<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Activated state is the selected item -->
    <item android:state_activated="true" android:drawable="@color/white_grey"/>
    <!-- Pressed state is the one the user is interacting with -->
    <item android:state_pressed="true" android:drawable="@color/app_green"/>
    <!-- The rest of the items -->
    <item android:drawable="@color/white_grey"/>
</selector>